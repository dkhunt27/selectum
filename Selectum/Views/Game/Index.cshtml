@model IEnumerable<Selectum.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    @Html.DropDownList("GameFilters")
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.GameFilter.GameFilterName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.GameDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team1.TeamLongName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team2.TeamLongName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeTeam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameFilter.GameFilterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team1.TeamLongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team2.TeamLongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GameId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GameId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GameId })
        </td>
    </tr>
}

</table>
