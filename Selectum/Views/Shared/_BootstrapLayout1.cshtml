<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>    
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/Scripts/jquery-1.8.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/knockout-2.1.0.js")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="navbar navbar-static-top">
                <div class="navbar-inner">
                    <h3><a class="brand" href="#">Selectum</a></h3>
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Selections", "KOIndex2", "Selection")</li>
                        @*<a class="dropdown-toggle"
                            data-toggle="dropdown"
                            href="#">
                            Admin
                            <b class="caret"></b>
                            </a>
                        <ul class="dropdown-menu">*@
                            <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                            <li>@Html.ActionLink("Game Filters", "Index", "GameFilter")</li>
                            <li>@Html.ActionLink("Games", "Index", "Game")</li>
                            <li>@Html.ActionLink("Tasks", "Index", "UserTaskSelection")</li>
                            <li>@Html.ActionLink("KOTest", "KOTest", "KOTest")</li>
                        @*</ul>*@
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav secondary-nav">
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="body">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
            <footer class="footer">
                <p>&copy; dkhunt27 2012</p>
            </footer>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
